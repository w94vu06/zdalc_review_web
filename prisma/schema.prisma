datasource db {
  provider = "mysql" // 或其他如 mysql
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id             Int      @id @default(autoincrement())
  title          String
  content        String
  author         String
  category       String
  reviewStatus   String
  lastViewedAt   DateTime
  reviewer       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
